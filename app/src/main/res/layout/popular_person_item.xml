<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    card_view:cardCornerRadius="14.5dp"
    card_view:cardElevation="14.5dp"
    card_view:cardPreventCornerOverlap="true"
    cardview:contentPaddingBottom="14.5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_byte"
        android:layout_marginLeft="@dimen/size_word"
        android:layout_marginRight="@dimen/size_word"
        android:layout_marginTop="@dimen/size_byte"
        android:background="#E64A19"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/popular_person_iamge"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
           android:layout_gravity="left"
            android:src="@drawable/clearhistory"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >


        <TextView
            android:id="@+id/popular_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:alpha="0.87"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Hitman Agent 47"
            android:textSize="@dimen/size_text_primary"
            android:textColor="@color/primary_dark_material_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:layout_gravity="right"
            android:gravity="bottom"
            android:padding="@dimen/size_half_byte"
            android:text="Popularity"
            android:textColor="#CDDC39"
            android:textSize="@dimen/size_text_secondary"
            />

        <TextView
            android:id="@+id/popular_person_known_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:padding="@dimen/size_half_byte"
            android:text="31-31-31"
            android:textSize="@dimen/size_text_secondary"
            android:layout_gravity="right"
            android:gravity="top"
            android:textColor="#CDDC39"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>