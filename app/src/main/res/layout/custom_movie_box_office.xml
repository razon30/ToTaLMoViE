<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6B6B6"
    card_view:cardCornerRadius="8.5dp"

    android:layout_marginBottom="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_byte"
        android:background="#FFFFFF"
        >


        <ImageView
            android:id="@+id/movieThumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF"
            android:gravity="center"/>

        <TextView

            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="Hitman Agent 47"
            android:textColor="@color/accentColor"
            android:textSize="24sp"
            android:layout_below="@+id/movieThumbnail"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/movieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:padding="@dimen/size_half_byte"
            android:text="31-31-31"
            android:textColor="@color/accentColor"
            android:textSize="@dimen/size_text_secondary"
            android:layout_below="@+id/movieTitle"
            android:layout_alignStart="@+id/movieTitle"/>

        <RatingBar
            android:padding="@dimen/size_half_byte"
            android:id="@+id/movieAudienceScore"
            style="@android:style/Widget.Holo.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:max="5"
            android:numStars="0"
            android:layout_alignStart="@+id/movieReleaseDate"
            android:layout_below="@+id/movieReleaseDate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_half_byte"
            android:layout_marginRight="50dp"
            android:id="@+id/imageButton"
            android:text="Explore"
            android:textSize="20sp"
            android:textColor="@color/primaryColor"
            android:layout_below="@+id/movieTitle"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>