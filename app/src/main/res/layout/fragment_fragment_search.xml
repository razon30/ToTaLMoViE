<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="#B6B6B6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">


                    <com.example.razon30.totalmovie.MyTextViewOne
                        android:id="@+id/see_more_popular_movie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="8dp"
                        android:text="Popular Movies"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/see_more_popular_movies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="10dp"
                        android:paddingRight="7dp"
                        android:paddingTop="8dp"
                        android:text="See More"
                        android:textColor="@color/accent_color"
                        android:textSize="16sp"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_two"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            />

                        <TextView
                            android:id="@+id/text_search_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_three"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            />

                        <TextView
                            android:id="@+id/text_search_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_one"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            />

                        <TextView
                            android:id="@+id/text_search_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="#B6B6B6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <com.example.razon30.totalmovie.MyTextViewOne
                        android:id="@+id/box_office_imd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="5dp"
                        android:text="Popular Persons"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/box_office_imdb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="10dp"
                        android:paddingRight="7dp"
                        android:paddingTop="8dp"
                        android:text="See More"
                        android:textColor="@color/accent_color"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_person_two"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_search_popular_person_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_person_three"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_search_popular_person_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_popular_person_one"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_search_popular_person_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <com.example.razon30.totalmovie.MyTextViewOne
                        android:id="@+id/trailer_imd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="8dp"
                        android:text="TRAILERS (IMDB)"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/trailer_imdb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="10dp"
                        android:paddingRight="7dp"
                        android:paddingTop="8dp"
                        android:text="See More"
                        android:textColor="@color/accent_color"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_trailer_one"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_trailer_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_trailer_two"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_trailer_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/search_fragment_trailer_three"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            />

                        <TextView
                            android:id="@+id/text_trailer_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="#B6B6B6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="8dp"
                    android:text="TOP 10 (IMDB)"
                    android:textColor="#D2691E"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/bottom_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingTop="8dp"
                    android:text="BOTTOM 10 (IMDB)"
                    android:textColor="#D2691E"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="#B6B6B6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.razon30.totalmovie.MyTextViewOne
                    android:id="@+id/btn_search_genre_list"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom"
                    android:paddingLeft="15dp"
                    android:text="Movies By Genre"
                    android:textColor="#DAA520"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/search_genre_list1"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                    <ListView
                        android:id="@+id/search_genre_list2"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                    <ListView
                        android:id="@+id/search_genre_list3"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>