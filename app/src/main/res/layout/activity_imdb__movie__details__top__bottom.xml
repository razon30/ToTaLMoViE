<android.support.design.widget.CoordinatorLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="top"
                    android:background="@color/primary_dark_material_dark"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    />

                <ImageView
                    android:id="@+id/play_trailer"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:src="@android:drawable/ic_media_play"
                    app:layout_collapseMode="parallax"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:theme="@style/Rushmore.Toolbar.Transparent"

                />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/movie_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            >

            <!--<android.support.v7.widget.CardView-->
            <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginLeft="6dp"-->
            <!--android:layout_marginRight="6dp"-->
            <!--android:background="#B6B6B6"-->
            <!--card_view:cardCornerRadius="8.5dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_dark_material_dark"

                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:id="@+id/cover1"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:layout_gravity="top"
                            android:background="@color/primary_dark_material_dark"
                            />

                        <ImageView
                            android:id="@+id/play_trailer1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:src="@android:drawable/ic_media_play"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!--<TextView-->
                    <!--android:id="@+id/title_details"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="#DAA520"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:paddingBottom="5dp"-->
                    <!--android:paddingLeft="8dp"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:textColor="@color/primary_dark_material_dark"-->
                    <!--android:textSize="18sp"-->
                    <!--android:textStyle="bold"/>-->


                    <TextView
                        android:id="@+id/genre_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background2"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:textColor="#212121"
                        android:textStyle="italic"
                        />

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="10dp"


                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="10dp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:id="@+id/multiple_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center">

                                <ImageView
                                    android:id="@+id/multiple_actions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#99333333"
                                    android:src="@drawable/ic_action_collection"
                                    android:textSize="18sp">
                                </ImageView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/watch_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center">

                                <ImageView
                                    android:id="@+id/watch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#99333333"
                                    android:src="@drawable/ic_btn_seen"
                                    android:textSize="18sp">

                                </ImageView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/wish_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center">

                                <ImageView
                                    android:id="@+id/wish"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#99333333"
                                    android:src="@drawable/ic_action_watchlist"
                                    android:textSize="18sp">

                                </ImageView>
                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <!--</android.support.v7.widget.CardView>-->

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/accentColor"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tagline_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:textColor="@color/accentColor"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        ></TextView>

                    <TextView
                        android:id="@+id/overview_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/primary_dark_material_dark"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/postar_image_detail"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:paddingLeft="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_rating"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:alpha="1.0"

                                />

                            <LinearLayout
                                android:id="@+id/rating_Layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_audience"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center_vertical"
                                    android:text="/10"
                                    android:textSize="16sp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/homepage_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textColor="#3F51B5"
                            android:textStyle="italic"/>

                        <TextView
                            android:id="@+id/production_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"


                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/details_details"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="12dp"
                                    android:text="Images:"
                                    android:textColor="@color/accentColor"
                                    android:textSize="18sp"
                                    />

                                <TextView
                                    android:id="@+id/more_image"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="12dp"
                                    android:text="See More"
                                    android:textColor="@color/accent_color"
                                    android:textSize="18sp"
                                    />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/movie_details_image1"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"

                                        />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/movie_details_image2"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"

                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/movie_details_image3"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"

                                        />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <android.support.v7.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"

                            android:layout_marginRight="6dp"


                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/cast_and_c"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|left"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="12dp"
                                        android:text="Cast and Crew"
                                        android:textColor="@color/accentColor"
                                        android:textSize="18sp"
                                        />

                                    <TextView
                                        android:id="@+id/cast_and_crew"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|right"
                                        android:paddingBottom="10dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="12dp"
                                        android:text="See More"
                                        android:textColor="@color/accent_color"
                                        android:textSize="18sp"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"

                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_cast_image1"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_cast_name1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:gravity="center_horizontal"
                                            />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_cast_image2"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_cast_name2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_cast_image3"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_cast_name3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:gravity="center_horizontal"
                                            />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <android.support.v7.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"

                            android:layout_marginTop="10dp"


                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/similar_deta"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|left"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="8dp"
                                        android:text="Similar Movies:"
                                        android:textColor="#D2691E"
                                        android:textSize="18sp"
                                        />

                                    <TextView
                                        android:id="@+id/similar_details"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|right"
                                        android:paddingBottom="10dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="12dp"
                                        android:text="See More"
                                        android:textColor="@color/accent_color"
                                        android:textSize="18sp"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_similar_image1"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_similar_name1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:gravity="center_horizontal"
                                            />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_similar_image2"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_similar_name2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:gravity="center_horizontal"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/movie_details_similar_image3"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"

                                            />

                                        <TextView
                                            android:id="@+id/movie_details_similar_name3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:gravity="center_horizontal"
                                            />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="6dp"

                            android:layout_marginRight="6dp"


                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/review_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center_vertical"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="8dp"
                                    android:text="Review"
                                    android:textColor="#D2691E"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="6dp"

                            android:layout_marginRight="6dp"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center_vertical"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="8dp"
                                    android:text="Genre"
                                    android:textColor="#D2691E"
                                    android:textSize="18sp"
                                    />

                                <TextView
                                    android:id="@+id/genre_down_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="top"

                                    android:paddingBottom="3dp"
                                    android:paddingLeft="7dp"
                                    android:textColor="@color/accentColor"
                                    android:textStyle="italic"
                                    ></TextView>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="6dp"

                            android:layout_marginRight="6dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center_vertical"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="8dp"
                                    android:text="Revenue"
                                    android:textColor="#D2691E"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:id="@+id/revenue_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="top"

                                    android:paddingBottom="3dp"
                                    android:paddingLeft="7dp"
                                    android:textColor="@color/accentColor"
                                    ></TextView>

