<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.razon30.totalmovie.FragmentUpcoming"
    android:id="@+id/layout">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/upcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="#0288D1"
        fab:fab_addButtonColorPressed="#3F51B5"
        fab:fab_addButtonPlusIconColor="@color/accentColor"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:src="@drawable/az_refresh"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="#0288D1"
            fab:fab_addButtonColorPressed="#3F51B5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:src="@drawable/cal_refresh"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="#0288D1"
            fab:fab_addButtonColorPressed="#3F51B5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:src="@drawable/important_refresh"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="#0288D1"
            fab:fab_addButtonColorPressed="#3F51B5"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</RelativeLayout>
